@import url('https://fonts.googleapis.com/css?family=Lato:400,700')

/* variables */

$headerBgColor = #292929;
$headerBorderColor = #1e1e1e;
$footerBgColor = #f8f8f8;
$hoverColor = #58c93a;
$titleColor = #4f4e4e;
$textColor = #6b6b6b;
$buttonColor = #c2c2c2;
$borderColor = #e1e0e0;
$transitionTime = .3s

$Lato = 'Lato', sans-serif;

/* styles */

body
  font-family $Lato
  min-width 320px

a
  text-decoration none

button:focus
  outline none

.clearfix::after
  content ''
  display table
  clear both

.container
  margin 0 auto
  width 980px

.header
  background-color $headerBgColor
  border-bottom 6px solid $headerBorderColor

  &__logotype
    float left
    margin-top 3em
    transition opacity $transitionTime

    &:hover
      opacity .75

  &__menu
    float right
    font-size 0
    color white
    display inline-block
    transition font-size $transitionTime

  &__menu-list
    margin 0
    padding 0
    list-style none

  &__menu-item
    display inline-block
    font-size 16px
    border 0 solid $headerBorderColor
    border-left-width 1px

    &:last-child
      border-right-width 1px

  &__menu-link
    position relative
    display block
    padding 3.3em 2.5em
    font-weight 700
    color currentColor

    &::after
      position absolute
      opacity 0
      left 0
      right 0
      bottom -6px
      content ''
      border-bottom 6px solid $hoverColor
      transition all $transitionTime

    &:hover
      color $hoverColor

      &:after
        opacity 1

.content
  .container
    color $textColor
    border 0 solid $borderColor
    border-left-width 1px
    border-right-width 1px

.article
  padding 40px 0
  width 100%

  &:first-child
    padding-top 80px

  &:last-child
    padding-bottom 80px

  &__pic
    margin-right 1em

  &__content
    margin-left 1em
    max-width 468px
    display inline-block
    vertical-align top

  &__title
    margin 0 0 1.5em
    font-size 28px
    text-transform uppercase
    cursor default
    color $titleColor

  &__text
    margin-right 3em
    line-height 1.4



.btn
  position relative
  margin-top 1.4em
  padding 8px 25px
  font-family inherit
  font-size 16px
  color $buttonColor
  cursor pointer
  background none
  border 2px solid $buttonColor
  border-radius 25px
  transition padding $transitionTime

  & i
    position absolute
    right 10%
    top 10px
    opacity 0
    transition opacity $transitionTime

  &:hover
    padding-right 3em
    color $hoverColor
    border-color $hoverColor

  &:hover > i
    display inline-block
    opacity 1

  &__menu
    position relative
    top -.8em
    margin 0 1em
    cursor pointer
    color white
    background none
    border none

    &:hover
      color $hoverColor

  &__prev, &__next
    font-family inherit
    font-size 18px
    font-weight 700
    color $textColor
    letter-spacing .1em
    text-transform uppercase
    cursor pointer
    background none
    border none

    & i
      position relative

    &:hover
      color $hoverColor

  &__prev
    float left

    &:hover > i
      animation prev 1s ease
      animation-iteration-count infinite

  &__next
    float right

    &:hover > i
      animation next 1s ease
      animation-iteration-count infinite

  &__social
    margin 0 10px
    width 40px
    height 40px
    color white
    cursor pointer
    background-color #e5e5e5
    border none
    transition all $transitionTime

    &.fb:hover
      background-color #516fad

    &.tw:hover
      background-color #2fbbed

    &.be:hover
      background-color #3079ff

    &.dr:hover
      background-color #eb6397

.navigation
  padding 2em
  border 0 solid $borderColor
  border-top-width 1px
  border-bottom-width 1px

.footer
  text-align center
  background-color $footerBgColor

  &__logotype
    transition opacity $transitionTime

    &:hover
      opacity .75

  .container
    padding 80px 0

  &__copyright
    font 13px inherit
    color #a6a6a6

  &__link
    font-weight 700
    color currentColor

    &:hover
      color $hoverColor

.active > a
  color $hoverColor

  &::after
    opacity 1

/* animations */

@keyframes next
  0% {
    left: 0;
  }
  50% {
    left: 5%;
  }
  100% {
    left: 0;
  }

@keyframes prev
  0% {
    right: 0;
  }
  50% {
    right: 5%;
  }
  100% {
    right: 0;
  }


/* adaptive */

@media (max-width 1000px)
  .container
    width 100%

  .header__logotype
    margin-left 1em

  .content
    .container
      border none

  .article
    text-align center

    &__pic, &__content
      display block
      margin 0 auto

    &__pic
      padding-bottom 1em

    &__content
      padding-top 1em

    &__text
      margin 0

@media (max-width 650px)
  .header
    .container
      text-align center
      padding 1em 0 0

    &__logotype
      float none
      display block
      margin 0

    &__menu
      float none
      display block

    &__menu-link
      padding 1em

  .btn__menu
    display inline-block

@media (max-width 480px)
  .header
    &__menu-item
      font-size 15px

  .article
    &__pic
      width 100%


